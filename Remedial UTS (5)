#include <iostream>
#include <conio.h>
using namespace std;
int main(int argc, char** argv)
{
    int awal, kebalikan=0, n;
    
    cout<<"Masukkan Angka : "; cin>>awal;
    
    n=awal;
    do
    {
        kebalikan=(kebalikan*10)+(n%10);
        n=n/10;
    }
    while (n>0);
    
    cout<<" ===================================================== \n"<<endl;
    cout<<" Kebalikan Dari Angka "<<awal<<" Adalah "<<kebalikan;
    cout<<" ===================================================== \n"<<endl;
    
getch();
}
